{
  "name": "@yigitkonur/sdk-deno-mem0",
  "version": "0.1.0",
  "description": "Deno SDK for Mem0 Cloud API - The Memory Layer for AI Apps",
  "license": "Apache-2.0",
  "exports": "./mod.ts",
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "lint": {
    "exclude": ["examples/", "supabase/"],
    "rules": {
      "tags": ["recommended", "jsr"],
      "include": [
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "camelcase",
        "single-var-declarator",
        "no-console",
        "ban-untagged-todo",
        "eqeqeq",
        "no-eval",
        "no-throw-literal",
        "no-deprecated-deno-api",
        "no-node-globals",
        "no-process-global",
        "no-window",
        "no-window-prefix",
        "no-var",
        "prefer-const"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "indentWidth": 2,
    "lineWidth": 100,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "test": {
    "include": ["tests/"]
  },
  "tasks": {
    "check": "deno check mod.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "test": "deno test --allow-net --allow-env",
    "test:unit": "deno test tests/client_test.ts",
    "doc": "deno doc mod.ts",
    "doc:lint": "deno doc --lint mod.ts",
    "all": "deno task lint && deno task fmt:check && deno task check && deno task test"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  }
}
